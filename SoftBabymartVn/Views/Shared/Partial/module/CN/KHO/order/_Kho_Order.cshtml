    <script type="text/html" id="readTemplate_kho_Order">
        <td>
            <span data-bind="text: Id"></span>
        </td>
        <td>
            <span data-bind="dateshort: DateOrder"></span>
        </td>
        <td>
            <span data-bind="text: Note"></span>
        </td>
        <td>
            <input type="button" class="button compact icon-gear" value="Xem chi tiết" data-bind="click: function(){ kho_Order.ReviewInfo($data)}" />
