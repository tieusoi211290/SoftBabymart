        <div class="table-responsive">
            <table class="table table-bordered table-advance table-hover" id="DataTable_kho_Order"
                   data-bind="dataTable: {
                              dataSource: kho_Order.listTable,
                              rowTemplate: 'readonlyTmp_kho_Order',
                              gridId: 'AssetGrid_kho_Order',
                              deferRender: true,
                              columns:
                                  [
                                      {'name':'Id' },
                                      {'name':'DateOrder' },
                                      {'name':'Note' }
                                  ]
                            }">
                <thead>
                    <tr>
                        <th>Mã ĐH</th>
