                        <th>Ghi chú</th>
                        <th>Hành động</th>
                    </tr>
                </thead>
                <tbody></tbody>
            </table>
        </div>

    </fieldset>
    <script type="text/html" id="readonlyTmp_kho_Order">
        <!--ko template: { name: 'readTemplate_kho_Order'} --> <!--/ko-->
