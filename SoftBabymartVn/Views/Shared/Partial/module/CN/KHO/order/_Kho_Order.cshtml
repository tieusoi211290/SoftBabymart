</script>
<div id="kho_OrderViewId">
    <fieldset class="fieldset">
        <legend class="legend black-gradient">
            Danh sách đặt hàng
        </legend>
        <span class="button-group p-10">
            <a href="javascript:void(0)" class="button green-gradient glossy icon-plus" onclick="Utils.addTabDynamic('ĐẶT HÀNG', '@Url.Content("~/KHO_OrderProduct/RenderView")', '#contentX')">Tiến hành đặt hàng</a>
